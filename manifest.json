{
  "manifest_version": 3,
  "name": "Roblox Recommendations Remover",
  "version": "1.0",
  "description": "Удаляет секции с рекомендованными играми на Roblox",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://www.roblox.com/*"]
}